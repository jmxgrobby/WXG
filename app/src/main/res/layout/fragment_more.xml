    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        tools:context="com.jmxgrobby.login.fragment.MoreFragment">

        <!-- 更多 设置 标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="更多"
                android:textColor="#444"
                android:layout_marginLeft="45dp"
                />
            <TextView
                android:id="@+id/txt_setup"
                android:layout_marginRight="8dp"
                android:text="设置"
                android:textSize="20sp"
                android:gravity="right"
                android:textColor="#7ddeee"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <!-- 分享部分-->
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/fragement_more_share"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#777"
                android:text="分享好友"
                android:textSize="14sp"
                android:button="@null"
                android:paddingRight="20dp"
                android:drawableTop="@mipmap/share_btn_icon"
                android:layout_width="0dp"
                android:layout_height="70dp" />
            <RadioButton
                android:id="@+id/fragment_more_wechat"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#777"
                android:text="官方微信"
                android:button="@null"
                android:drawableTop="@mipmap/login_wechat_login_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/fragement_more_weibo"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#777"
                android:text="官方微博"
                android:button="@null"
                android:drawableTop="@mipmap/login_sina_login_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:background="#c3e5ee"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <!-- 简介部分-->
        <TextView
            android:textColor="#888"
            android:layout_margin="10dp"
            android:text="公益提供"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_more_logo"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/public_benefit_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/fragment_more_title"
                android:textSize="16sp"
                android:textColor="#777"
                android:text="微习惯公益"
                android:layout_toRightOf="@id/fragment_more_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#777"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:layout_toRightOf="@id/fragment_more_logo"
                android:layout_below="@id/fragment_more_title"
                android:text="致力于为公益事业提供免费的内容宣传和推广"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>



