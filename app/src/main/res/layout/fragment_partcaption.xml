<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmxgrobby.login.fragment.ParticipationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linelayout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="编辑"
            android:id="@+id/partcaption_edit"
            android:textSize="16sp"
            android:textColor="@color/text_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:text="全部 "
            android:alpha="1"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/partcaption_all"
            android:drawableRight="@mipmap/arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="添加习惯"
            android:textColor="@color/text_bg"
            android:textSize="16sp"
            android:gravity="right"
            android:id="@+id/partcaption_add_habit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.chsj.smallhabit.FullListView
        android:layout_marginTop="20dp"
        android:divider="@color/layout_bg"
        android:dividerHeight="5dp"
        android:id="@+id/partcaption_list_view"
        android:layout_below="@id/linelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.chsj.smallhabit.FullListView>



</RelativeLayout>
