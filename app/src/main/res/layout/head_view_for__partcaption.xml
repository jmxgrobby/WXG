<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 返回箭头-->
    <ImageView
        android:src="@mipmap/left_arrow_small_non"
        android:id="@+id/partcaption_history"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"><!-- 时间 -->
        <TextView
            android:textSize="13sp"
            android:id="@+id/partcaption_month"
            android:text="11月"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/partcaption_day"
            android:text="4"
            android:textSize="15sp"
            android:layout_below="@id/partcaption_month"
            android:layout_alignLeft="@id/partcaption_month"
            android:layout_alignRight="@id/partcaption_month"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- 星期-->
        <TextView
            android:text="今天"
            android:textSize="16sp"
            android:id="@+id/partcaption_week"
            android:layout_toRightOf="@id/partcaption_month"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:src="@mipmap/right_arrow_small_non"
        android:id="@+id/partcaption_next"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
