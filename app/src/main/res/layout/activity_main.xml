<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity"
        >

    <FrameLayout
            android:id="@+id/activity_main_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
    </FrameLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
        <ImageView
                android:id="@+id/activity_main_tab_qd"
                android:src="@mipmap/bottombar_participation_press"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                />
        <ImageView
                android:id="@+id/activity_main_tab_discover"
                android:src="@mipmap/bottombar_discover_none"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                />
        <ImageView
                android:id="@+id/activity_main_tab_personal"
                android:src="@mipmap/bottombar_personal_none"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                />
        <ImageView
                android:layout_marginBottom="10dp"
                android:id="@+id/activity_main_tab_more"
                android:src="@mipmap/bottombar_more_none"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

    </LinearLayout>


</LinearLayout>
