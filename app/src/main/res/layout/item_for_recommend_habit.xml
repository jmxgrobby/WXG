<?xml version="1.0" encoding="utf-8"?>
<!--item ,使用cardview ， 圆角半径5dp -->

<!--内边距 5dp-->
<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImgView 居左  -->

        <ImageView
            android:id="@+id/item_recommend_big_icon"
            android:src="@mipmap/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ImgViwe , 箭头， 居右下-->

        <ImageView
            android:id="@+id/item_recommend_right_arrow"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_alignBottom="@id/item_recommend_big_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TV , 16sp 箭头左边 ，与大图地步对齐 -->

        <TextView
            android:id="@+id/item_recommend_habit_detail"
            android:layout_toRightOf="@id/item_recommend_big_icon"
            android:layout_toLeftOf="@id/item_recommend_right_arrow"
            android:layout_alignBottom="@id/item_recommend_big_icon"
            android:text="的角色的方法建立深刻搭街坊立刻电视机发 "
            android:alpha="0.7"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- Tv , 25sp 箭头左边 ,-->

        <TextView
            android:id="@+id/item_recommend_habit_title"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:text="最受欢迎"
            android:alpha="0.9"
            android:gravity="right"
            android:layout_toLeftOf="@id/item_recommend_right_arrow"
            android:layout_above="@id/item_recommend_habit_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

