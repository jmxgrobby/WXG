<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    >


    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/partcaption_habit_name"
            android:text="做一个认真的人"
            android:textSize="25sp"
            android:alpha="0.7"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@id/partcaption_habit_name"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/partcaption_day_01"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_02"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_03"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_04"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_05"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_06"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_blue"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <ImageView
                android:id="@+id/partcaption_day_07"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle_white"
                android:layout_width="5dp"
                android:layout_height="5dp" />


        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>

