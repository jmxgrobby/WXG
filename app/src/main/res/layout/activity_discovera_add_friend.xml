<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chsj.smallhabit.DiscoveraAddFriendActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:alpha="0.6"
        android:textSize="20sp"
        android:text="@string/discover_add_friend_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#79ceea"
        android:alpha="0.6"
        android:textSize="20sp"
        android:text="@string/discover_add_friend_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <FrameLayout
        android:background="#dde8f6"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <SearchView
            android:layout_margin="5dp"
            android:background="#fff"
            android:queryHint="搜索好友昵称"
             android:layout_width="match_parent"
            android:layout_height="30dp" />
    </FrameLayout>
</LinearLayout>
    <ListView
        android:id="@+id/discover_add_friend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
