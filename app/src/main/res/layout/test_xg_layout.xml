<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/discover_square_hot_listview_item_xg_item_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/discover_square_hot_listview_item_xg_layout"
            android:layout_below="@id/discover_square_hot_listview_item_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

        <TextView
                android:id="@+id/discover_square_hot_listview_item_xg"
                android:textColor="@color/text_bg"
                android:textSize="20sp"
                android:gravity="center_vertical|right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                />

        <TextView
                android:gravity="center"
                android:text="连续"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        <TextView
                android:id="@+id/discover_square_hot_listview_item_sumtime"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_bg"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
    </LinearLayout>

    <TextView
            android:visibility="gone"
            android:id="@+id/discover_square_hot_listview_item_msg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <ImageView
            android:id="@+id/discover_square_hot_listview_item_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>