<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/layout_bg"
              android:orientation="vertical"
              tools:context="com.chsj.smallhabit.UserFeedBackActivity"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

        <ImageView
                android:id="@+id/activity_user_feed_back_back"
                android:src="@mipmap/back"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        <TextView
                android:text="用户反馈"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <Button
                android:id="@+id/activity_user_feed_back_ok"
                android:layout_alignParentRight="true"
                android:text="提交"
                android:background="@color/layout_bg"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></RelativeLayout>

    <EditText
            android:background="#fff"
            android:id="@+id/activity_user_feed_back_yijian"
            android:textColorHint="#f00"
            android:hint="如宁遇到问题，请留下宁的宝贵意见和联系方式，我们会有工作人员在第一时间联系宁，排查解决"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/layout_bg"
            android:layout_height="10dp"
            ></RelativeLayout>

    <EditText
            android:background="#fff"
            android:id="@+id/activity_user_feed_back_address"
            android:hint="QQ或邮箱（选填）便于我们给您回复"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="top"
            />

    <RelativeLayout
            android:background="@color/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></RelativeLayout>

    <TextView
            android:layout_margin="10dp"
            android:text="客服QQ：1515428790"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <TextView
            android:layout_margin="10dp"
            android:text="联系邮箱：wxg@appving.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>
